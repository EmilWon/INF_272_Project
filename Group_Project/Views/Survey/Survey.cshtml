
@{
    ViewBag.Title = "Survey";
    Layout = null;
}

<link rel="stylesheet" href="./Style/Style.css" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="container col-lg-6 col-md-8 col-sm-8" id="surveyMessageContainer">
    <div class="row">
        <div class="col"><img src="./Img/Logo.png" alt="Avatar" class="avatar" style="margin-right: 2%; width: 70%;"></div>
        <div class="col-8" style="text-align: left;">
            <p>
                Eco-impact is a competitive platform designed to help you and your community to reduce your collective impact on the environment. Before you continue, was have a few questions to ask...
            </p>
            <button class="btn btn-primary" onclick="takeSurvey()">Take survey</button>
            <br /><br />
            <div style="text-align: right;">
                <a style="cursor: pointer;">
                    Skip
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-caret-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M6 12.796L11.481 8 6 3.204v9.592zm.659.753l5.48-4.796a1 1 0 0 0 0-1.506L6.66 2.451C6.011 1.885 5 2.345 5 3.204v9.592a1 1 0 0 0 1.659.753z" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container col-lg-6 col-md-8 col-sm-8" id="surveyContainer">
    <h2 class="h3">Select all statements that apply to you and your household</h2>
    <br /><br />
    <div class="row">
        <div class="col"><img src="./Img/Logo.png" alt="Avatar" class="avatar" style="margin-right: 2%; width: 70%;"></div>
        <div class="col-8" style="text-align: left;">
            <table class="w3-table w3-striped w3-bordered w3-border w3-hoverable w3-white" style="cursor: pointer;">
                <tr>
                    <td><input type="checkbox" /></td>
                    <td>My household uses a solar geyser</td>
                </tr>
                <tr>
                    <td><input type="checkbox" /></td>
                    <td>My household uses led lighbulbs</td>
                </tr>
                <tr>
                    <td><input type="checkbox" /></td>
                    <td>My household maintains a compost heap</td>
                </tr>
                <tr>
                    <td><input type="checkbox" /></td>
                    <td>My household has a vegitable garden</td>
                </tr>
                <tr>
                    <td><input type="checkbox" /></td>
                    <td>My household uses Jo-Jo tanks to collect rainwater</td>
                </tr>
                <tr>
                    <td><input type="checkbox" /></td>
                    <td>Each toilet cistern in my household has a brick</td>
                </tr>
                <tr>
                    <td><input type="checkbox" /></td>
                    <td>My household has water saving tap fixtures</td>
                </tr>
                <tr>
                    <td><input type="checkbox" /></td>
                    <td>My household uses an energy alternative to electricity (gas/solar)</td>
                </tr>
                <tr>
                    <td><input type="checkbox" /></td>
                    <td>My household's vehicles are serviced bi-annually</td>
                </tr>
                <tr>
                    <td><input type="checkbox" /></td>
                    <td>I drive an electric car</td>
                </tr>
            </table>
            <br /><br />
            <button class="btn btn-primary" style="width: 50%;">Submit</button>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
<script src="~/Scripts/register.js"></script>

