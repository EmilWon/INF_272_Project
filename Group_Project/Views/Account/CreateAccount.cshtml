
@{
    ViewBag.Title = "CreateAccount";
    Layout = null;
}

<link rel="stylesheet" href="./Style/Style.css" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

@using (Html.BeginForm("Survey", "Account", FormMethod.Post))
{
    <div class="container col-lg-5 col-md-7 col-sm-8">
        <h3 class="h3">Login Credentials</h3>
        <img src="~/Icons/logo.png" alt="Avatar" class="avatar" style="width: 20%;">
        <div class="col" style="text-align: left;">
            <div class="col">
                <label class="lbl">Username</label><br /> <input type="text" class="inpt" style="width:100%" />
            </div>
            <div class="col">
                <label class="lbl">Email Address</label><br /> <input type="email" class="inpt" style="width:100%" />
            </div>
            <div class="col">
                <label class="lbl">Password</label><br /> <input type="password" class="inpt" style="width:100%" />
            </div>
            <div class="col">
                <label class="lbl">Confirm Password</label><br /> <input type="password" class="inpt" style="width:100%"/>
            </div>
        </div>
    </div>

    <div class="container col-lg-5 col-md-7 col-sm-8" style="margin-top: 2%;">
        <h3 class="h3">Account Security</h3>
        <div class="col">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                <label class="form-check-label" for="gridRadios2">
                    Publilc
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                <label class="form-check-label" for="gridRadios1">
                    Private
                </label>
            </div>
        </div>
        <div class="col" style="text-align: left;">
            <table class="w3-table w3-striped w3-bordered w3-border w3-hoverable w3-white" style="cursor: pointer;">
                <tr>
                    <td><input type="radio" name="selected_question" /></td>
                    <td>1</td>
                    <td>What was your favourite teacher's name during high school?</td>
                </tr>
                <tr>
                    <td><input type="radio" name="selected_question" /></td>
                    <td>2</td>
                    <td>What was the address of your childhood home?</td>
                </tr>
                <tr>
                    <td><input type="radio" name="selected_question" /></td>
                    <td>3</td>
                    <td>What was your mother's maiden name?</td>
                </tr>
                <tr>
                    <td><input type="radio" name="selected_question" /></td>
                    <td>4</td>
                    <td>What was the name of your first pet?</td>
                </tr>
                <tr>
                    <td><input type="radio" name="selected_question" /></td>
                    <td>5</td>
                    <td>What was the name of your childhood best friend?</td>
                </tr>
            </table>
            <div class="col" style="margin-top: 2%;">
                <label class="lbl">Security Question Answer:</label><br /> <input type="text" class="inpt" />
            </div>
        </div>
    </div>

    <div class="container col-lg-5 col-md-7 col-sm-8" style="margin-top: 2%;">
        <h3 class="h3">Account Settings</h3>
        <div class="col" style="text-align: center;">
            <div class="col">
                <img id="avatar" src="./Img/avatar.png" alt="your profile picture" class="w3-margin-right" style="width:20%; border-radius: 10px;" /><br /><br />
                <button class="btn btn-success" type="button" onclick="$('#imgInp').click()">Upload picture</button>
                <input type='file' id="imgInp" style="display: none;" />
            </div>
            <br /><br />
            <div class="col">
                <select name="country" class="custom-select">
                    <option value="South Africa" selected>South Africa</option>
                    <option value="Namibia">Namibia</option>
                    <option value="Botswana">Botswana</option>
                </select>
            </div>

            <br />
            <div class="col">
                <select name="gender" class="custom-select">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
        </div>
        <br /><br />
    </div>
    <div class="container col-lg-4 col-md-6 col-sm-8" style="margin-top: 2%; border: none;">
        <button class="btn btn-primary" style="width: 25%;" type="submit">Register</button>
    </div>
}
    <br /><br /><br /><br /><br />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="~/Scripts/register.js"></script>
