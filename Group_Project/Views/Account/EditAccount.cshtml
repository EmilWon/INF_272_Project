
@{
    ViewBag.Title = "EditAccount";
    Layout = null;
}

<link rel="stylesheet" href="~/Style/Style.css" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <!-- Div for log in creedentials -->
    <div class="container col-lg-5 col-md-7 col-sm-8">
        <h3 class="h3">Login Credentials</h3>
        <img src="~/Img/logo.png" alt="Avatar" class="avatar" style="width: 20%;">
        <div class="col" style="text-align: center;">
            <br />
            <br />
            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#password_modal">Edit password</button>
        </div>
    </div>

    <!-- Account security (security question) -->
    <div class="container col-lg-5 col-md-7 col-sm-8" style="margin-top: 2%;">
        <h3 class="h3">Account Security</h3>
        <div class="col">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                <label class="form-check-label" for="gridRadios2">
                    Publilc
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                <label class="form-check-label" for="gridRadios1">
                    Private
                </label>
            </div>
        </div>

        <!-- Table with security questions -->
        <div class="col">
            <table id="sequrity_question_table2" style="cursor: pointer;" class="w3-table w3-striped w3-bordered w3-border w3-hoverable w3-white">
                <tr>
                    <td><input type="radio" name="selected_question" /></td>
                    <td>1</td>
                    <td>What was your favourite teacher's name during high school?</td>
                </tr>
                <tr>
                    <td><input type="radio" name="selected_question" /></td>
                    <td>2</td>
                    <td>What was the address of your childhood home?</td>
                </tr>
                <tr>
                    <td><input type="radio" name="selected_question" /></td>
                    <td>3</td>
                    <td>What was your mother's maiden name?</td>
                </tr>
                <tr>
                    <td><input type="radio" name="selected_question" /></td>
                    <td>4</td>
                    <td>What was the name of your first pet?</td>
                </tr>
                <tr>
                    <td><input type="radio" name="selected_question" /></td>
                    <td>5</td>
                    <td>What was the name of your childhood best friend?</td>
                </tr>
            </table>
            <div class="col" style="margin-top: 2%;">
                <label class="lbl">Security Question Answer:</label><br /> <input type="password" class="inpt" />
            </div>
        </div>
    </div>

    <!-- Account settings -->
    <div class="container col-lg-5 col-md-7 col-sm-8" style="margin-top: 2%;">
        <h3 class="h3">Account Settings</h3>
        <div class="col" style="text-align: center;">
            <!-- Upload picture -->
            <div class="col">
                <img id="avatar" src="~/Img/avatar.png" alt="your profile picture" class="w3-margin-right" style="width:20%; border-radius: 10px;" /><br /><br />
                <button type="button" class="btn btn-success" onclick="$('#imgInp').click()">Upload picture</button>
                <input type='file' id="imgInp" style="display: none;" />
            </div>
            <br /><br />
            <!-- Select country -->
            <div class="col">
                <select name="country" class="custom-select">
                    <option value="South Africa" selected>South Africa</option>
                    <option value="Namibia">Namibia</option>
                    <option value="Botswana">Botswana</option>
                </select>
            </div>

            <br />
            <!-- Select gender -->
            <div class="col">
                <select name="gender" class="custom-select">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
        </div>
        <br /><br />

        <h5 class="h5" style="display: inline;">Daily Points Goal: &nbsp;&nbsp; </h5>
        <input type="number" min="50" />
    </div>
    <div class="container col-lg-4 col-md-6 col-sm-8" style="margin-top: 2%; border: none;">
        <button class="btn btn-secondary" style="width: 25%; float: left;" onclick="window.location='@Url.Action("Index", "News")'">Cancel</button>
        <button class="btn btn-primary" style="width: 25%; float: right;" type="submit">Update</button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="password_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="width: 40%;">Edit Password</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" style="float: right;">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col">
                        <label class="lbl">New Password</label><br /> <input type="password" class="inpt w-100" />
                    </div>
                    <div class="col">
                        <label class="lbl">Confirm New Password</label><br /> <input type="password" class="inpt w-100" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Save changes</button>
                </div>
            </div>
        </div>
    </div>
}
    <br /><br /><br /><br /><br />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="~/Scripts/Edit.js"></script>