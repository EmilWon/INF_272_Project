<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    @*<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="./Style/menu_style.css" />
    <link rel="stylesheet" href="~/Style/Style.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
    <div id="menu_burger" class="menu_item">
        <span style=" cursor: pointer; font-size: 230%;" class="menu_item">&#9776;</span>
    </div>

    <div class="col-lg-2 col-md-3 col-sm-4 col-8" id="menu_panel" style="min-width:200px">
        <div class="col-sm-12" id="menu_content">
            <i class="glyphicon glyphicon-remove" id="closeMenu"></i>
            <div class="row justify-content-center">
                <img id="avatar" src="~/Images/logo.png" alt="your profile picture" style="width:40%; border-radius: 10px;" /><br /><br />
            </div>
            <div class="row justify-content-center">
                <label>Eco-Imact</label>
            </div>
            <br /><hr /><br />
            <a id="home" class="glyphicon glyphicon-home  i"> <p style="display: inline;">Home</p></a>
            @*<a id="profile" class="glyphicon glyphicon-user  i"> <p style="display: inline;">My Profile</p>*@</a>
            <a id="performance" class="glyphicon glyphicon-stats  i"> <p style="display: inline;">Performance</p></a>
            <a id="news" class="glyphicon glyphicon-bell  i"> <p style="display: inline;">News</p></a>
            <a id="community" class="glyphicon glyphicon-tower  i"> <p style="display: inline;">Community</p></a>
            <a id="activities" class="glyphicon glyphicon-tree-conifer  i"> <p style="display: inline;">Activities</p></a>
            <a id="settings" class="glyphicon glyphicon-cog  i"> <p style="display: inline;">Account Settings</p></a>
            <hr />
            <a id="logout" href="Login/Index" class="glyphicon glyphicon-log-out i"> <p style="display: inline;">Logout</p></a>
        </div>
    </div>
    <div id="overlay"></div>
    <div id="overlay2"></div>

    <div class="container body-content" style="border: none; margin-top:0;">
        <div class="container" style="border: none; margin-top:0;">
            <div id="main_content" style="border: none; margin-top:0;">
                <div class="col-10" style="margin-top:0;">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="./Scripts/menu_script.js"></script>

</body>
</html>
