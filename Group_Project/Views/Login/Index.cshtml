
@{
    ViewBag.Title = "Login";
    //Layout = null;
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link rel="stylesheet" href="~/Style/Style.css" />

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <form>
        <div class="container col-lg-4 col-md-6 col-sm-8">
            <div class="col">
                <h2 class="h2">Welcome to Eco-Impact!</h2>
            </div>
            <div class="imgcontainer">
                <img src="~/Icons/logo.png" alt="Logo" class="avatar" style="width: 20%;">
            </div>
            <div class="col">
                <input type="text" placeholder="username" name="username" required>
            </div>
            <div class="col">
                <input type="password" placeholder="password" name="password" required>
            </div>
            <div class="col">
                <i onclick="window.location='@Url.Action("ForgotPassword", "Login")'">Forgot password?</i>
            </div>
            <div class="col">
                <input type="submit" value="Login" />
            </div>
            <div class="col">
                <input type="button" value="Create Account" onclick="window.location='@Url.Action("Index", "Account")'" />
            </div>
        </div>
    </form>
}